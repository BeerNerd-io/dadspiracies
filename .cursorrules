    "styles": {
        "global": {
            "backgroundColor": "#121212",
            "color": "#e0e0e0",
            "fontFamily": "'Roboto', sans-serif",
            "lineHeight": "1.6"
        },
        "buttons": {
            ".btn": {
                "backgroundColor": "#00ffea",
                "color": "#121212",
                "padding": "0.75rem 1.5rem",
                "border": "none",
                "borderRadius": "25px",
                "textDecoration": "none",
                "fontWeight": "bold",
                "transition": "background-color 0.3s ease, transform 0.3s ease"
            },
            ".btn:hover": {
                "backgroundColor": "#00c4b4",
                "transform": "translateY(-3px)"
            }
        },
        "cards": {
            ".episode-card, .resource-card, .product-card": {
                "backgroundColor": "#2c2c2c",
                "padding": "1.5rem",
                "borderRadius": "15px",
                "boxShadow": "0 4px 8px rgba(0,0,0,0.3)",
                "transition": "transform 0.3s ease, box-shadow 0.3s ease"
            },
            ".episode-card:hover, .resource-card:hover, .product-card:hover": {
                "transform": "translateY(-10px)",
                "boxShadow": "0 8px 16px rgba(0,0,0,0.5)"
            },
            ".episode-card img, .resource-card img, .product-card img": {
                "width": "100%",
                "borderRadius": "10px",
                "marginBottom": "1rem"
            },
            ".episode-card h3, .resource-card h3, .product-card h3": {
                "fontSize": "1.5rem",
                "marginBottom": "0.5rem",
                "color": "#00ffea"
            },
            ".episode-card p, .resource-card p, .product-card p": {
                "fontSize": "0.9rem",
                "marginBottom": "1rem"
            },
            ".price": {
                "fontSize": "1.2rem",
                "color": "#ff4081",
                "marginBottom": "1rem"
            },
            ".credibility-score": {
                "fontSize": "0.9rem",
                "color": "#ff9800"
            }
        },
        "grid": {
            ".episodes-grid, .resources-grid, .shop-grid": {
                "display": "grid",
                "gridTemplateColumns": "repeat(auto-fit, minmax(250px, 1fr))",
                "gap": "2rem"
            }
        },
        "typography": {
            "h1": {
                "fontFamily": "'Orbitron', sans-serif",
                "fontSize": "3rem",
                "color": "#00ffea",
                "marginBottom": "1rem"
            },
            "h2": {
                "fontFamily": "'Orbitron', sans-serif",
                "fontSize": "2.5rem",
                "color": "#00ffea",
                "marginBottom": "1rem"
            },
            "h3": {
                "fontFamily": "'Orbitron', sans-serif",
                "fontSize": "1.5rem",
                "color": "#00ffea",
                "marginBottom": "0.5rem"
            },
            "p": {
                "fontSize": "1rem",
                "marginBottom": "2rem"
            }
        },
        "responsive": {
            "@media (max-width: 768px)": {
                ".nav-links": {
                    "display": "none",
                    "flexDirection": "column"
                },
                ".menu-toggle": {
                    "display": "flex"
                },
                ".home-section": {
                    "paddingTop": "80px"
                },
                ".section": {
                    "padding": "80px 20px 60px"
                }
            }
        }
    },
    "animations": {
        "hoverEffects": {
            ".btn:hover": {
                "backgroundColor": "#00c4b4",
                "transform": "translateY(-3px)"
            },
            ".episode-card:hover, .resource-card:hover, .product-card:hover": {
                "transform": "translateY(-10px)",
                "boxShadow": "0 8px 16px rgba(0,0,0,0.5)"
            },
            ".social-links a:hover": {
                "transform": "scale(1.2)"
            }
        }
    },
    "pwa": {
        "manifest": "manifest.json",
        "serviceWorker": "sw.js",
        "icons": [
            {
                "src": "assets/icons/icon-192x192.png",
                "sizes": "192x192",
                "type": "image/png"
            },
            {
                "src": "assets/icons/icon-512x512.png",
                "sizes": "512x512",
                "type": "image/png"
            }
        ],
        "themeColor": "#00ffea",
        "backgroundColor": "#121212",
        "display": "standalone"
    }
}
