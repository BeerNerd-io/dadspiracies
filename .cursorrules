        "shop": {
            "id": "shop",
            "class": "shop-section",
            "backgroundColor": "#1f1f1f",
            "content": {
                "container": {
                    "maxWidth": "1200px",
                    "margin": "auto",
                    "elements": [
                        {
                            "type": "heading",
                            "text": "Shop",
                            "style": {
                                "fontFamily": "'Orbitron', sans-serif",
                                "fontSize": "2.5rem",
                                "color": "#00ffea",
                                "marginBottom": "1rem"
                            }
                        },
                        {
                            "type": "grid",
                            "class": "shop-grid",
                            "columns": "repeat(auto-fit, minmax(250px, 1fr))",
                            "gap": "2rem",
                            "items": [
                                {
                                    "type": "card",
                                    "class": "product-card",
                                    "elements": [
                                        {
                                            "type": "image",
                                            "src": "assets/images/product1.jpg",
