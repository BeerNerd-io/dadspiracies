                                                "fontWeight": "bold",
                                                "transition": "background-color 0.3s ease, transform 0.3s ease"
                                            },
                                            "hoverStyle": {
                                                "backgroundColor": "#00c4b4",
                                                "transform": "translateY(-3px)"
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        "resources": {
            "id": "resources",
            "class": "resources-section",
            "backgroundColor": "#1f1f1f",
            "content": {
                "container": {
