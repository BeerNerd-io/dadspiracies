{
    "site": {
        "title": "Dadspiracies",
        "description": "Dive deep into the most intriguing conspiracy theories with a fun twist!",
        "baseUrl": "https://www.dadspiracies.com",
        "theme": "futuristic",
        "colors": {
            "primary": "#a9a42c",
            "secondary": "#000000",
            "background": "#FFFFFF"
        },
        "fonts": {
            "heading": "'Orbitron', sans-serif",
            "body": "'Roboto', sans-serif"
        },
        "icons": {
            "favicon": "assets/icons/favicon.ico",
            "appleTouchIcon": "assets/icons/apple-touch-icon.png",
            "manifest": "manifest.json"
        }
    },
    "layout": {
        "header": {
            "logo": {
                "text": "Dadspiracies",
                "link": "#home",
                "style": {
                    "fontFamily": "'Orbitron', sans-serif",
                    "fontSize": "1.5rem",
                    "color": "#00ffea",
                    "textDecoration": "none"
                }
            },
            "navigation": {
                "links": [
                    { "name": "Home", "href": "#home" },
                    { "name": "About", "href": "#about" },
                    { "name": "Episodes", "href": "#episodes" },
                    { "name": "Resources", "href": "#resources" },
                    { "name": "Shop", "href": "#shop" }
                ],
                "style": {
                    "listStyle": "none",
                    "display": "flex",
                    "gap": "2rem"
                },
                "linkStyle": {
                    "color": "#e0e0e0",
                    "textDecoration": "none",
                    "fontSize": "1rem",
                    "transition": "color 0.3s ease"
                },
                "linkHoverStyle": {
                    "color": "#00ffea"
                }
            },
            "mobileMenu": {
                "enabled": true,
                "icon": "assets/icons/menu.svg",
                "style": {
                    "display": "none"
                }
            },
            "background": {
                "color": "#1f1f1f",
                "shadow": "0 2px 5px rgba(0,0,0,0.5)"
            }
        },
        "footer": {
            "content": "&copy; 2024 Dadspiracies. All rights reserved.",
            "socialLinks": [
                { "platform": "Twitter", "href": "#", "icon": "assets/icons/twitter.svg" },
                { "platform": "Instagram", "href": "#", "icon": "assets/icons/instagram.svg" },
                { "platform": "Facebook", "href": "#", "icon": "assets/icons/facebook.svg" }
            ],
            "style": {
                "backgroundColor": "#1f1f1f",
                "color": "#e0e0e0",
                "textAlign": "center",
                "padding": "2rem 1rem"
            },
            "socialLinkStyle": {
                "margin": "0 0.5rem",
                "display": "inline-block",
                "transition": "transform 0.3s ease"
            },
            "socialLinkHoverStyle": {
                "transform": "scale(1.2)"
            },
            "iconSize": {
                "width": "24px",
                "height": "24px"
            }
        }
    },
    "sections": {
        "home": {
            "id": "home",
            "class": "home-section",
            "background": {
                "image": "assets/images/futuristic-background.jpg",
                "size": "cover",
                "position": "center",
                "repeat": "no-repeat"
            },
            "content": {
                "alignment": "center",
                "elements": [
                    {
                        "type": "heading",
                        "text": "Welcome to Dadspiracies",
                        "style": {
                            "fontFamily": "'Orbitron', sans-serif",
                            "fontSize": "3rem",
                            "color": "#00ffea",
                            "marginBottom": "1rem"
                        }
                    },
                    {
                        "type": "paragraph",
                        "text": "Dive deep into the most intriguing conspiracy theories with a fun twist!",
                        "style": {
                            "fontSize": "1.2rem",
                            "marginBottom": "2rem"
                        }
                    },
                    {
                        "type": "button",
                        "text": "Listen Now",
                        "href": "#episodes",
                        "style": {
                            "backgroundColor": "#00ffea",
                            "color": "#121212",
                            "padding": "0.75rem 1.5rem",
                            "border": "none",
                            "borderRadius": "25px",
                            "textDecoration": "none",
                            "fontWeight": "bold",
                            "transition": "background-color 0.3s ease, transform 0.3s ease"
                        },
                        "hoverStyle": {
                            "backgroundColor": "#00c4b4",
                            "transform": "translateY(-3px)"
                        }
                    }
                ]
            }
        },
        "about": {
            "id": "about",
            "class": "about-section",
            "backgroundColor": "#1f1f1f",
            "content": {
                "container": {
                    "maxWidth": "1200px",
                    "margin": "auto",
                    "elements": [
                        {
                            "type": "heading",
                            "text": "About Us",
                            "style": {
                                "fontFamily": "'Orbitron', sans-serif",
                                "fontSize": "2.5rem",
                                "color": "#00ffea",
                                "marginBottom": "1rem"
                            }
                        },
                        {
                            "type": "paragraph",
                            "text": "Dadspiracies is hosted by two friends who love unraveling the truth behind the world's most fascinating conspiracies. Join us for a humorous and insightful journey through hidden truths and mysterious phenomena.",
                            "style": {
                                "fontSize": "1rem",
                                "marginBottom": "2rem"
                            }
                        }
                    ]
                }
            }
        },
